doctype html
html.play

  head
    meta(charset='utf-8')
    meta(name='viewport',content='initial-scale=1')
    title Pleeease &middot; Postprocess CSS with ease
    meta(name='description',content='Write DRY, future-proof CSS and let Pleeease do the job')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Damion')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Open+Sans:400,700')
    if selected === 'index'
      link(rel='stylesheet',href='app.min.css')
      link(rel='icon', href='images/favicon.png')
    else
      link(rel='stylesheet',href='../app.min.css')
      link(rel='icon', href='../images/favicon.png')

    <!--[if IE]>
    style.
      .title { padding-top: 5em; }
    <![endif]-->

    script.
      document.createElement('header');
      document.createElement('nav');
      document.createElement('section');
      document.createElement('article');
      document.createElement('footer');

  body

    header.header

      h1.header-title
        a(href='/') pleeease
      p.header-subtitle.header-subtitle--play Play

    -var menu = { 'index': 'Get started', 'docs': 'Docs', 'workflow': 'Workflow'};
    -var docs = ['Configuration file', 'Features', 'CLI'];
    nav
      ul
        each val, key in menu
          if key === 'index'
            -var url='/';
          else
            -var url='/'+key;
          li
            if selected === key
              a.selected(href=url, title=val)= val
            else
              a(href=url, title=val)= val
        li
          a.play(href='/play') Play
        li.version
          a(href='https://github.com/iamvdo/pleeease/releases') Version <strong>1.1.x</strong>
        li.version <a href="http://twitter.com/pleeeaseCSS">@pleeeaseCSS</a>

    block content

