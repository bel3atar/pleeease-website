html

  head
    meta(charset='utf-8')
    meta(name='viewport',content='initial-scale=1')
    title Pleeease &middot; Postprocess CSS with ease
    meta(name='description',content='Write DRY, future-proof CSS and let Pleeease do the job')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Damion&text=Pplease')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Open+Sans:400,700')
    link(rel='stylesheet',href='app.min.css')
